@{
    ViewData["Title"] = "Shows";
}

@model IEnumerable<BestestTheaters.WebApp.Models.ShowViewModel>

<table class="custom-table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var show in Model)
        {
            <tr>
                <td>@show.Date</td>
                <td>@show.Title</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>